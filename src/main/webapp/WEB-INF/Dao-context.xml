<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.github.djuloori.whiteboard.dao" />
    <context:annotation-config/>
     <bean id = "classdao"       class = "com.github.djuloori.whiteboard.dao.ClassesDao"/>
     <bean id = "userdao"        class = "com.github.djuloori.whiteboard.dao.UserDao"/>
     <bean id = "tadao"          class = "com.github.djuloori.whiteboard.dao.TaDao"/>
     <bean id = "syllabusdao"    class = "com.github.djuloori.whiteboard.dao.SyllabusDao"/>
     <bean id = "scheduledao"    class = "com.github.djuloori.whiteboard.dao.ScheduleDao"/>
     <bean id = "assignmentdao"  class = "com.github.djuloori.whiteboard.dao.AssignmentDao"/>
     <bean id = "studentdao"     class = "com.github.djuloori.whiteboard.dao.StudentDao"/>

</beans>